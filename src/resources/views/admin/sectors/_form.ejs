<%- include('../../partials/messages') %>

<form action="<%= url %>" method="POST">

  <div class="field">
    <label class="label" for="name">Nome</label>
    <div class="control">
      <input
        class="input"
        type="text"
        name="sector[name]"
        id="name"
        placeholder="Insira um nome"
        value="<%= typeof sector.name != 'undefined' ? sector.name : '' %>"
        autofocus
        autocomplete="off"
        required
      />
      <% if (sector.errors && sector.errors.hasOwnProperty('name')) { %>
        <p class="is-danger help"><%= sector.errors.name %></p>
      <% } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <button class="button is-success" type="submit">Salvar</button>
      <a href="/admin/sectors" class="button">Voltar</a>
    </div>
  </div>

</form>
