<%- include('../layouts/header') %>

<section class="section">
  <div class="container">
    <div class="card">
      <div class="card-content">
        <div class="is-flex is-align-items-center is-justify-content-space-between">
          <h1 class="title mb-0">Turma <%= classroom.name %></h1>
          <div class="buttons">
            <a
              href="/manager/classrooms/<%= classroom._id %>/edit"
              class="button is-link"
            >
              Editar Turma
            </a>
            <a href="/manager/schools/<%= classroom.school %>" class="button">Voltar</a>
          </div>
        </div>

        <hr>
        
        <div class="is-flex is-align-items-center is-justify-content-space-between mb-4">
          <h4 class="title is-4 mb-0">Alunos</h4>
          <a href="/manager/classrooms/<%= classroom._id %>/addStudent" class="button is-link">Novo Aluno</a>
        </div>

        <%- include('../partials/messages') %>
        <table class="table">
          <thead>
            <tr>
              <th>Matrícula</th>
              <th>Nome</th>
              <th>Sobrenome</th>
              <th>Telefone</th>
              <th colspan="3">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach(student => { %>
              <tr>
                <td>
                  <%= student.enrollment %>
                </td>
                <td>
                  <%= student.firstName %>
                </td>
                <td>
                  <%= student.lastName %>
                </td>
                <td>
                  <%= student.phone %>
                </td>
                <td>
                  <a href="/manager/students/<%= student._id %>">Exibir</a>
                </td>
                <td>
                  <a href="/manager/students/<%= student._id %>/edit">Editar</a>
                </td>
                <td>
                  <a
                    class="has-text-danger modal-toggler"
                    data-target="deleteModalStudent_<%= student._id %>"
                  >
                    Excluir
                  </a>
                </td>
              </tr>

              <%- include('../partials/_delete-modal', { name: 'Student', _id: student._id, url: `/manager/students/${student._id}?_method=delete` }) %>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>
