<%- include('../../layouts/header') %>

  <section class="section">
    <div class="container">
      <div class="card">
        <div class="card-content">
          <div class="is-flex is-align-items-center is-justify-content-space-between">
            <h1 class="title size-4 mb-0">Todas as Turmas</h1>
            <div class="button-group">
              <a href="/admin/classrooms/create" class="button is-link">Nova Turma</a>
            </div>
          </div>

          <hr>

          <%- include('../../partials/messages') %>
            <table class="table">
              <thead>
                <tr>
                  <th>Nome</th>
                  <th>Ano</th>
                  <th>Escola</th>
                  <th colspan="3">Ações</th>
                </tr>
              </thead>
              <tbody>
                <% classrooms.forEach(classroom=> { %>
                  <tr>
                    <td>
                      <%= classroom.name %>
                    </td>
                    <td>
                      <%= classroom.grade.name %>
                    </td>
                    <td>
                      <%= classroom.school.name %>
                    </td>
                    <td>
                      <a href="/admin/classrooms/<%= classroom.id %>">Exibir</a>
                    </td>
                    <td>
                      <a href="/admin/classrooms/<%= classroom.id %>/edit">Editar</a>
                    </td>
                    <td>
                      <a class="has-text-danger modal-toggler" data-target="deleteModalClassroom_<%= classroom.id %>">
                        Excluir
                      </a>
                    </td>
                  </tr>

                  <%- include('../../partials/_delete-modal', { name: 'Classroom' , id: classroom.id, url:
                    `/admin/classrooms/${classroom.id}?_method=delete` }) %>
                    <% }) %>
              </tbody>
            </table>
        </div>
      </div>
    </div>
  </section>

  <%- include('../../layouts/footer') %>
