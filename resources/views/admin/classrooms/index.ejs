<%- include('../../layouts/admin-header') %>

<section class="section">
  <div class="container">
    <div class="card">
      <div class="card-content">
        <div class="columns">
          <div class="column is-four-fifths">
            <h1 class="title size-4">Lista de Turmas</h1>
          </div>
          <div class="column is-one-fifth">
            <a href="/admin/classrooms/new" class="button is-link">Nova Turma</a>
          </div>
        </div>
      </div>

      <div class="card-content">
        <%- include('../../partials/messages') %>
        <table class="table">
          <thead>
            <tr>
              <th>Turma</th>
              <th>Nome</th>
              <th>Escola</th>
              <th colspan="3">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% classrooms.forEach(classroom => { %>
              <tr>
                <td>
                  <%= classroom.code %>
                </td>
                <td>
                  <%= classroom.name %>
                </td>
                <td>
                  <%= classroom.school.name %>
                </td>
                <td>
                  <a href="/admin/classrooms/<%= classroom._id %>">Exibir</a>
                </td>
                <td>
                  <a href="/admin/classrooms/<%= classroom._id %>/edit">Editar</a>
                </td>
                <td>
                  <a href="/admin/classrooms/<%= classroom._id %>?_method=delete" class="has-text-danger">Excluir</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<%- include('../../layouts/admin-footer') %>
