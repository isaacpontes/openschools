<%- include('../../layouts/header') %>

  <section class="section">
    <div class="container">
      <div class="card">
        <div class="card-content">
          <div class="is-flex is-align-items-center is-justify-content-space-between">
            <h1 class="title size-4 mb-0">Setores</h1>
            <a href="/admin/sectors/create" class="button is-link">Novo Setor</a>
          </div>

          <hr>

          <%- include('../../partials/messages') %>
            <table class="table">
              <thead>
                <tr>
                  <th>Nome</th>
                  <th colspan="3">Ações</th>
                </tr>
              </thead>
              <tbody>
                <% sectors.forEach(sector=> { %>
                  <tr>
                    <td>
                      <%= sector.name %>
                    </td>
                    <td>
                      <a href="/admin/sectors/<%= sector.id %>/edit">Editar</a>
                    </td>
                    <td>
                      <a class="has-text-danger modal-toggler" data-target="deleteModalSector_<%= sector.id %>">
                        Excluir
                      </a>
                    </td>
                  </tr>

                  <%- include('../../partials/_delete-modal', { name: 'Sector' , id: sector.id, url:
                    `/admin/sectors/${sector.id}?_method=delete` }) %>
                    <% }) %>
              </tbody>
            </table>
        </div>
      </div>
    </div>
  </section>

  <%- include('../../layouts/footer') %>
