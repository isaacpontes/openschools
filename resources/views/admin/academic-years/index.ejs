<%- include('../../layouts/header') %>

<section class="section">
  <div class="container">
    <div class="card mb-6">
      <div class="card-content">
        <div class="is-flex is-align-items-center is-justify-content-space-between">
          <h1 class="title size-4 mb-0">Anos Letivos</h1>
          <button class="button is-link modal-toggler" data-target="add-academicYear-modal">
            Adicionar
          </button>
        </div>
      </div>
    </div>

    <%- include('../../partials/messages') %>

    <div class="columns is-multiline is-mobile">
      <% academicYears.forEach(academicYear => { %>
        <div class="column is-6-mobile is-4-tablet is-3-desktop">
          <div class="card">
            <div class="card-content">
              <h3 class="title is-5">
                <%= academicYear.year %>
              </h3>
            </div>
            <footer class="card-footer">
              <div class="card-footer-item">
                <a class="modal-toggler" data-target="editModalAcademicYear_<%= academicYear.id %>">
                  Editar
                </a>
              </div>
              <div class="card-footer-item">
                <a class="has-text-danger modal-toggler" data-target="deleteModalAcademicYear_<%= academicYear.id %>">
                  Excluir
                </a>
              </div>
            </footer>
          </div>
        </div>

        <div id="editModalAcademicYear_<%= academicYear.id %>" class="modal">
          <div class="modal-background modal-toggler" data-target="editModalAcademicYear_<%= academicYear.id %>"></div>

          <div class="modal-card">
            <header class="modal-card-head">
              <p class="modal-card-title">Editar Ano Escolar</p>
              <button class="delete modal-toggler" aria-label="close" data-target="editModalAcademicYear_<%= academicYear.id %>"></button>
            </header>

            <%- include('_form', { url: `/admin/academic-years/${academicYear.id}?_method=put`, academicYear }) %>
          </div>
        </div>

        <%- include('../../partials/_delete-modal', { name: 'AcademicYear' , id: academicYear.id, url: `/admin/academic-years/${academicYear.id}?_method=delete` }) %>
      <% }) %>
    </div>
  </div>
</section>

<%- include('_add') %>

<%- include('../../layouts/footer') %>
