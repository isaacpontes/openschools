<%- include('../../layouts/header') %>

<section class="section">
  <div class="container">
    <div class="card">
      <div class="card-content">
        <div class="is-flex is-align-items-center is-justify-content-space-between">
          <h1 class="title size-4 mb-0">Alunos</h1>
          <div class="button-group">
            <a href="/manager/students/create" class="button is-link">Novo Aluno</a>
          </div>
        </div>

        <hr>

        <%- include('../../partials/messages') %>
          <div class="table-container">
            <table class="table">
              <thead>
                <tr>
                  <th>Matrícula Estadual</th>
                  <th>Nome</th>
                  <th>Sobrenome</th>
                  <th>Gênero</th>
                  <th>Telefone</th>
                  <th>Matriculado</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% students.forEach(student=> { %>
                  <tr>
                    <td>
                      <%= student.student_code %>
                    </td>
                    <td>
                      <%= student.first_name %>
                    </td>
                    <td>
                      <%= student.last_name %>
                    </td>
                    <td>
                      <%= student.gender === 'female' ? 'Feminino' : 'Masculino' %>
                    </td>
                    <td>
                      <%= student.phone %>
                    </td>
                    <td>
                      <%= student.enrolled() ? 'Sim' : 'Não' %>
                    </td>
                    <td>
                      <a href="/manager/students/<%= student.id %>">Exibir</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
      </div>
    </div>
  </div>
</section>

<%- include('../../layouts/footer') %>
