<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Open Schools</title>

  <link rel="stylesheet" href="/dist/main.css">
</head>

<body>

  <section class="hero is-fullheight is-light">
    <div class="columns mt-6">
      <div class="column is-8-tablet is-offset-2-tablet is-4-desktop is-offset-4-desktop">
        <div class="card">
          <div class="card-content">
            <h1 class="title has-text-centered">Bem-vindo!</h1>

            <%- include('../partials/messages') %>

              <form action="/auth/login" method="post">

                <div class="field">
                  <label class="label" for="email">Email</label>
                  <div class="control">
                    <input class="input" type="email" name="email" id="email" placeholder="Digite seu email"
                      autocomplete="off" />
                  </div>
                </div>

                <div class="field">
                  <label class="label" for="password">Senha</label>
                  <div class="control">
                    <input class="input" type="password" name="password" id="password" placeholder="Digite sua senha" />
                  </div>
                </div>

                <div class="field">
                  <div class="control">
                    <button class="button is-primary is-fullwidth" type="submit">Entrar</button>
                  </div>
                </div>

              </form>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>

</html>
