<%- include('../layouts/header') %>

<section class="section has-background-light">
  <div class="container">
    <div class="card">
      <div class="card-content">
        <h1 class="title">Turma: <%= classroom.code %></h1>

        <hr>

        <div class="field">
          <h4 class="title is-4">Nome</h4>
          <h6 class="subtitle"><%= classroom.name %></h6>
        </div>
      </div>

      <div class="card-content">
        <hr>
        <div class="columns">
          <div class="column is-four-fifths">
            <h4 class="title is-4">Alunos</h4>
          </div>
          <div class="column is-one-fifth">
            <a href="/classrooms/<%= classroom._id %>/addStudent" class="button is-link">Novo Aluno</a>
          </div>
        </div>
      </div>
      <div class="card-content">
        <%- include('../partials/messages') %>
        <table class="table">
          <thead>
            <tr>
              <th>Matrícula</th>
              <th>Nome</th>
              <th>Sobrenome</th>
              <th>Telefone</th>
              <th colspan="3">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach(student => { %>
              <tr>
                <td>
                  <%= student.enrollment %>
                </td>
                <td>
                  <%= student.firstName %>
                </td>
                <td>
                  <%= student.lastName %>
                </td>
                <td>
                  <%= student.phone %>
                </td>
                <td>
                  <a href="/students/<%= student._id %>">Exibir</a>
                </td>
                <td>
                  <a href="/students/<%= student._id %>/edit">Editar</a>
                </td>
                <td>
                  <a href="/students/<%= student._id %>?_method=delete" class="has-text-danger">Excluir</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="card-content">
        <div class="buttons">
          <a
            href="/classrooms/<%= classroom._id %>/edit"
            class="button is-link"
          >
            Editar Turma
          </a>
          <a href="/schools/<%= classroom.school %>" class="button">Voltar</a>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>
