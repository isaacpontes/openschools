<%- include('../layouts/header') %>

<section class="section">
  <div class="container">
    <div class="card">
      <div class="card-content">
        <div class="columns">
          <div class="column is-four-fifths">
            <h1 class="title size-4">Listagem de Alunos</h1>
          </div>
          <div class="column is-one-fifth">
            <a href="/students/new" class="button is-link">Novo Aluno</a>
          </div>
        </div>
      </div>

      <div class="card-content">
        <%- include('../partials/messages') %>
        <div class="table-container">
          <table class="table">
            <thead>
              <tr>
                <th>Matrícula</th>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Telefone</th>
                <th>Escola</th>
                <th colspan="3">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% students.forEach(student => { %>
                <tr>
                  <td>
                    <%= student.enrollment %>
                  </td>
                  <td>
                    <%= student.firstName %>
                  </td>
                  <td>
                    <%= student.lastName %>
                  </td>
                  <td>
                    <%= student.phone %>
                  </td>
                  <td>
                    <%= student.school.name %>
                  </td>
                  <td>
                    <a href="/students/<%= student._id %>">Exibir</a>
                  </td>
                  <td>
                    <a href="/students/<%= student._id %>/edit">Editar</a>
                  </td>
                  <td>
                    <a href="/students/<%= student._id %>?_method=delete" class="has-text-danger">Excluir</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>
