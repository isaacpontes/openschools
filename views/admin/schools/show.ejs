<%- include('../../layouts/admin-header') %>

<section class="section">
  <div class="container">
    <div class="card">
      <div class="card-content">
        <h1 class="title">Escola: <%= school.name %></h1>
        <hr>
        <div class="columns">
          <div class="column is-two-quarters">
            <div class="field">
              <h4 class="title is-4">Endereço</h4>
              <h6 class="subtitle"><%= school.address %></h6>
            </div>
          </div>
          <div class="column is-one-quarter">
            <div class="field">
              <h4 class="title is-4">Código do INEP</h4>
              <h6 class="subtitle"><%= school.inepCode %></h6>
            </div>
          </div>
          <div class="column is-one-quarter">
            <div class="field">
              <h4 class="title is-4">Gestor</h4>
              <h6 class="subtitle">
                <a href="/users/<%= school.manager._id %>" class="has-text-dark">
                  <%= school.manager.name %>
                </a>
              </h6>
            </div>
          </div>
        </div>
      </div>

      <div class="card-content">
        <hr>
        <div class="columns">
          <div class="column is-four-fifths">
            <h4 class="title is-4">Lista de Turmas</h4>
          </div>
        </div>
      </div>
      <div class="card-content">
        <%- include('../../partials/messages') %>
        <table class="table">
          <thead>
            <tr>
              <th>Turma</th>
              <th>Nome</th>
              <th colspan="2">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% classrooms.forEach(classroom => { %>
              <tr>
                <td>
                  <%= classroom.code %>
                </td>
                <td>
                  <%= classroom.name %>
                </td>
                <td>
                  <a href="/admin/classrooms/<%= classroom._id %>">Exibir</a>
                </td>
                <td>
                  <a href="/admin/classrooms/<%= classroom._id %>/edit">Editar</a>
                </td>
                <td>
                  <a href="/admin/classrooms/<%= classroom._id %>?_method=delete" class="has-text-danger">Excluir</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="card-content">
        <div class="buttons">
          <a href="/admin/schools/<%= school._id %>/edit" class="button is-link">Editar Escola</a>
          <a href="/admin/schools" class="button">Voltar</a>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../../layouts/admin-footer') %>
