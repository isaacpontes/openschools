<section class="section has-background-light">
  <div class="container">
    <div class="card">
      <div class="card-content">
        <div class="columns">
          <div class="column is-four-fifths">
            <h1 class="title size-4">Listagem de Escolas</h1>
          </div>
          <div class="column is-one-fifth">
            <a href="/schools/new" class="button is-link">Nova Escola</a>
          </div>
        </div>
      </div>

      <div class="card-content">
        <%- include('../partials/messages') %>
        <table class="table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Código do INEP</th>
              <th colspan="3">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% schools.forEach(school => { %>
              <tr>
                <td>
                  <%= school.name %>
                </td>
                <td>
                  <%= school.inepCode %>
                </td>
                <td>
                  <a href="/schools/<%= school._id %>">Exibir</a>
                </td>
                <td>
                  <a href="/schools/<%= school._id %>/edit">Editar</a>
                </td>
                <td>
                  <a href="/schools/<%= school._id %>?_method=delete" class="has-text-danger">Excluir</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>